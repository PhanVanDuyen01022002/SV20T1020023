@model Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/Delete/@Model.ProductID">
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <img class="img-thumbnail" style="max-height: 150px;" src="~/images/products/@Model.Photo" alt="không có ảnh" />
                </div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-remove"></i>
                    Xác nhận xóa
                </button>
                <a href="~/Product" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>