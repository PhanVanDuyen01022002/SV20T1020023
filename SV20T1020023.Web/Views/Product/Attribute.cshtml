@model ProductAttribute
@{
    ViewBag.Title = "Thay đổi thông tin Attibute ";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AttributeId)
            @Html.HiddenFor(m => m.ProductId)

            <input type="hidden" name="@nameof(Model.ProductId)" value="@Model.ProductId" />
            <input type="hidden" name="@nameof(Model.AttributeId)" value="@Model.AttributeId" />
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.AttributeName)" value="@Model.AttributeName">
                    @Html.ValidationMessageFor(m => m.AttributeName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.AttributeValue)" value="@Model.AttributeValue">
                    @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder">
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductId">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>
