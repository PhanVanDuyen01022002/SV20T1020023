@model ProductSearchInput
@{
    ViewBag.Title = " Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form tim kiem: Nhap vao-->
        <form id="formSearch" action="~/Product/Search" method="get" data-container="#searchResult">
            <div class="row">
                <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize"/>

                <div class="col-sm-3">
                    <select class="form-control" name="@nameof(Model.CategoryID)">
                        <option value="">--Loại hàng--</option>
                        @{
                            var categories = SV20T1020023.BusinessLayers.CommonDataService.ListOfCategorys(out var rowCount, Model.Page, Model.PageSize, Model.SearchValue);
                            foreach (var item in categories)
                            {
                                if (item.CategoryID == Model.CategoryID)
                                {
                                        <option value="@item.CategoryID" selected>@item.CategoryName</option>
                                }
                                else
                                {
                                        <option value="@item.CategoryID">@item.CategoryName</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="@nameof(Model.SupplierID)">
                        <option value="">--Nhà cung cấp--</option>
                        @{
                            var suppliers = SV20T1020023.BusinessLayers.CommonDataService.ListOfSuppliers(out var RowCount, Model.Page, Model.PageSize, Model.SearchValue);
                            foreach (var item in suppliers)
                            {
                                if (item.SupplierID == Model.SupplierID)
                                {
                                                    <option value="@item.SupplierID" selected>@item.SupplierName</option>
                                }
                                else
                                {
                                                    <option value="@item.SupplierID">@item.SupplierName</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class=" col-sm-6 input-group">
                    <input name="@nameof(Model.SearchValue)" type="text" class="form-control" 
                        placeholder="Nhập tên mặt hàng cần tìm" value="@Model.SearchValue">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>
        <!--Ket qua tim kiem: Hien thi-->
        <div id="searchResult">

        </div>
    </div>
</div>

@section scripts {
        <script>
            $(document).ready(function (e) {
                $("#formSearch").submit(function (e) {
                    e.preventDefault();
                    doSearch(this, 1);
                    return;
                });
                doSearch("#formSearch", @Model.Page);
            });

            function doSearch(formSearch, page) {
                var action = $(formSearch).prop("action");
                var method = $(formSearch).prop("method");
                var container = $(formSearch).data("container");

                var searchData = $(formSearch).serializeArray();
                searchData.push({ "name": "Page", "value": page });
                $.ajax({
                    url: action,
                    type: method,
                    data: searchData,
                    async: false,                                
                    error: function () {
                        alert("Your request is not valid!");
                    },
                    success: function (data) {
                        $(container).html(data);
                    }
                });
            }
        </script>
}