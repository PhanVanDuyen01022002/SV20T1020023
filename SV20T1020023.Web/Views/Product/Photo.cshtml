@* @model SV20T1020023.Web.Models.ProductPhotoSearchResult *@
@model ProductPhoto
@{

}

<div class="box box-primary">

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.ProductId)" value="@Model.ProductId" />
            <input type="hidden" name="@nameof(Model.PhotoId)" value="@Model.PhotoId" />
            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                        onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="mac.png" />
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả ảnh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox" value="true" name="IsHidden"  @if (Model.IsHidden){<text>checked</text>}>
                            Không hiển thị ảnh
                        </label>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductId">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>
