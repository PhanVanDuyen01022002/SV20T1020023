@model SV20T1020023.web.Models.Person
@{
    ViewBag.Title = "Create Person";
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" value="@Model.Name" name="Name" autofocus>
            </div>
            <!-- Sử dụng trường input hidden để truyền giá trị BirthDate -->
            <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
            <div class="form-group">
                <label>BirthDate:</label>
                <input type="text" class="form-control date-picker" 
                        name="birthDateInput" 
                        value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))">
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
            </div>
        </form>
    </div>
</div>
